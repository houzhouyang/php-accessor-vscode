{
  "name": "php-accessor-vscode",
  "displayName": "PHP Accessor",
  "description": "一键生成对象的所有Setter调用语句",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:php",
    "onCommand:php-accessor-vscode.helloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "php-accessor-vscode.helloWorld",
        "title": "PHP Accessor: Hello World"
      },
      {
        "command": "php-accessor-vscode.navigateToProperty",
        "title": "PHP Accessor: Navigate to Property"
      },
      {
        "command": "php-accessor-vscode.navigateToAccessor",
        "title": "PHP Accessor: Navigate to Accessor"
      }
    ],
    "languages": [
      {
        "id": "php",
        "extensions": [".php"]
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == php",
          "command": "php-accessor-vscode.navigateToProperty",
          "group": "navigation"
        },
        {
          "when": "editorLangId == php",
          "command": "php-accessor-vscode.navigateToAccessor",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "glob": "^10.3.10"
  },
  "publisher": "zhouyangHouz",
  "repository": {
    "type": "git",
    "url": "https://github.com/houzhouyang/php-accessor-vscode.git"
  },
  "icon": "images/icon.png",
  "keywords": [
    "php",
    "accessor",
    "getter",
    "setter",
    "navigation"
  ],
  "license": "MIT"
}
